<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>
  </head>
  <body>
    <a href="/auth/logout">Logout</a>

    <h1>URL Shortener</h1>
    <form action="/api/shorten" method="POST">
      <label for="url">Enter URL:</label>
      <input type="text" id="url" name="originalUrl" required />
      <!-- name must match req.body.originalUrl -->
      <button type="submit">Shorten</button>
    </form>

    <h2>Shortened URLs</h2>
    <ul>
      <% if (urls && urls.length > 0) { %> <% urls.forEach(function(url) { %>
      <li>
        <a href="/api/<%= url.shortCode %>"><%= url.shortCode %></a> - Original:
        <%= url.originalUrl %> - Visited Count: <%= url.visitedHistory.length %>
        <a href="/api/analytics/<%= url.shortCode %>">Detail</a>
      </li>
      <% }); %> <% } else { %>
      <li>No URLs shortened yet.</li>
      <% } %>
    </ul>
  </body>
</html>
